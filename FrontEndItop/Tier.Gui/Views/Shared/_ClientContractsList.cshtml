@{
    IList<Tier.Dto.IP_Contract> lstContracts = (IList<Tier.Dto.IP_Contract>)ViewBag.lstContratos;
}
<!-- Profile Image -->
<div class="box box-primary">
    <div class="box-body box-profile">
        <img class="profile-user-img img-responsive img-circle" src="@Url.Content("~/dist/img/building-128x128.png")" alt="User profile picture">
        <h3 class="profile-username text-center">@(lstContracts.Count > 0 ? lstContracts[0].organization_name : "---")</h3>
    </div>
    <!-- /.box-body -->
</div>
<!-- /.box -->
<!-- About Me Box -->
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Lista de contratos</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        @if (lstContracts.Count > 0)
        {
            <table class="table no-margin">
                <thead>
                    <tr>
                        <th>Contrato</th>
                        <th>Opción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Tier.Dto.IP_Contract item in lstContracts)
                {
                <tr>
                    <td>@Ajax.ActionLink(item.name, "DetalleConsumo", "FrontEnd", new { id = item.id }, new AjaxOptions() { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "divClientContractsDetails" })</td>
                    <td>@Ajax.ActionLink("Detalle", "DetalleConsumo", "FrontEnd", new { id = item.id }, new AjaxOptions() { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "divClientContractsDetails" })</td>
                </tr>
                }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-danger alert-dismissible">
                <h4><i class="icon fa fa-info"></i> Información!</h4>
                No se encontraron contratos asociados al usuario actual.
            </div>
        }
    </div>
    <!-- /.box-body -->
</div>
<!-- /.box -->
<div class="box box-solid">
    <div class="box-header with-border">
        <i class="fa fa-info"></i>
        <h3 class="box-title">Leyendas</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <span class="label label-primary">Números de caso que inician con <wbr>R-... son Requerimientos</span>
        <span class="label label-primary">Números de caso que inician con <wbr>I-... son Incidentes</span>
    </div>
    <!-- /.box-body -->
</div>
<!-- /.box -->
